<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:background="@color/combback1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rviimage"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="220dp" />
        <TextView
            android:textColor="@color/comb1text1"
            android:layout_below="@id/rviimage"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentRight="true"
            android:text="bdnews234"
            android:id="@+id/rvitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="3dp"
            android:textColor="@color/comb1text1"
            android:layout_below="@id/rvitime"
            android:id="@+id/rvititle"
            android:textSize="18sp"
            android:text="This is new Title "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:text="news Desk"
            android:textColor="@color/comb1text1"
            android:layout_below="@id/rvititle"
            android:id="@+id/rviauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>